{% block deploy_target %}
- deploy:
    timeout:
      minutes: 25
    to: fastboot
    namespace: target
    connection: lxc
    images:
      boot:
        url: lxc:///boot.img
      rootfs:
        url: lxc:///rpb-console-image-lkft.rootfs.img
        apply-overlay: true
    os: oe
    protocols:
      lava-lxc:
      - action: fastboot-deploy
        request: pre-power-command
        timeout:
          minutes: 2
{% endblock deploy_target %}

{% block boot_target %}
- boot:
    namespace: target
    auto_login:
